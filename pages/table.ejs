<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Заявки с формы</title>
    <link rel="stylesheet" href="/css/custom.css" />
  </head>
  <body>
    <%- include('components/header') %>
    <div class="container">
      <h1>Заявки с формы</h1>

      <table>
        <thead>
          <tr>
            <th>Дата отправки</th>
            <th>ФИО</th>
            <th>Телефон</th>
            <th>Проблема</th>
          </tr>
        </thead>
    <tbody>
   <% if (!patient || patient.length === 0) { %>
          <tr>
            <td colspan="4">Нет заявок</td>
          </tr>
        <% } else { %>
          <% patient.forEach(app => { %>
            <tr>
              <td><%= app.createdAt ? app.createdAt.toLocaleDateString('ru-RU') : '–' %></td>
              <td><%= app.name %></td>
              <td><%= app.phone %></td>
              <td><%= app.message || '–' %></td>
            </tr>
          <% }); %>
        <% } %>
</tbody>
      </table>
    </div>
  </body>
</html>
